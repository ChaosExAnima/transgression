{
	"name": "transgression",
	"version": "1.0.0",
	"description": "Transgression website",
	"main": "index.js",
	"scripts": {
		"start": "yarn docker up -d",
		"stop": "yarn docker down",
		"logs": "yarn docker logs",
		"wp": "yarn docker exec wordpress wp",
		"predocker": "docker context use default",
		"docker": "docker compose",
		"setup": "concurrently yarn:setup:plugins yarn:setup:theme",
		"setup:plugins": "yarn wp plugin install --activate $(cat plugins.txt)",
		"setup:theme": "yarn wp theme install blockbase; yarn wp theme activate transgression",
		"cron": "yarn wp cron event run --due-now"
	},
	"repository": "git@github.com:ChaosExAnima/transgression.git",
	"author": "echo <ChaosExAnima@users.noreply.github.com>",
	"license": "MIT",
	"private": true,
	"devDependencies": {
		"concurrently": "^7.2.1",
		"prettier": "^2.6.2"
	},
	"volta": {
		"node": "18.3.0"
	}
}